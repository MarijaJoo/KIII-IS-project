@model Is.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Login</h1>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="logindiv">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br />
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m=>m.Email)
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                <br />
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m=>m.Password)
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.RememberMe" class="col-lg-3 control-label"></label>
                <br />
                <div class="col-lg-9">
                    @Html.CheckBoxFor(m=>m.RememberMe)
                    @Html.ValidationMessageFor(m=>m.RememberMe)
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>


    </form>
</div>