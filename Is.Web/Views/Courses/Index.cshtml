@model List<Is.Domain.DomainModels.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="m-3">
        <a class="btn btn-primary" asp-controller="Courses" asp-action="Create">
            Add new Course
        </a>
    </div>
    
    @for(int i=0; i < Model.Count; i++)
    {
        var item = Model[i];


        if(i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.CourseImage" alt="Image for course" style="height:50%"/>
                <div class="card-body">
                        <h5 class="card-title">@item.CourseName</h5>
                        <p class="card-text" >@item.CourseDescription</p>
                        <h6 class="card-text" >Price: @item.CoursePrice</h6>
                        <h6 class="card-text" >Rating: @item.Rating</h6>
                        <a href="@item.Link" class="btn btn-primary">Get me there</a>
                </div>
                <div class="card-footer">
                        <a asp-controller="Courses" asp-action="AddCourseToCard" asp-route-id="@item.Id" class="btn btn-info">Add to MyCourses</a>
                    <a asp-controller="Courses" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
                </div>
            
            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }

</div>
