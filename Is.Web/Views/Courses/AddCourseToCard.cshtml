@model Is.Domain.DTO.AddCourseToCardDTO

@{
    ViewData["Title"] = "Add Course To Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
Add selected course to My Courses Card
</h1>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddCourseToCard" method="post">
        <input type="hidden" asp-for="CourseId"/>
        <div class="form-group">
            <label asp-for="SelectedCourse.CourseName"></label>
            <input disabled asp-for="SelectedCourse.CourseName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
        </div>
        </form>
    </div>
</div>
